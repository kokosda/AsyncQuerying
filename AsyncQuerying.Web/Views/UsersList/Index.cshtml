@model UsersListModel
@{
    ViewBag.Title = "Пользователи";
}

<h2>Пользователи</h2>

<br />
@Html.Partial("IndexFilter", Model.Filter)
<div class="clearfix"></div>
<br />
<div class="col-md-6">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Items != null && Model.Items.Count > 0)
            {
                foreach (var i in Model.Items)
                {
                    <tr>
                        <td>
                            @i.Id
                        </td>
                        <td>
                            @i.Name
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2">
                        нет данных
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="clearfix"></div>